<div class="col-8 p-3">
  <%= simple_form_for @edition, url: event_edition_path(@edition), method: :patch do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :start_time, as: :string, required: false, input_html: {id: "range_start"} %>

      <%= f.input :end_time, as: :string, required: false, input_html: {id: "range_end"} %>

      <%= f.input :address %>
      <%= f.input :status, collection: Edition.statuses.keys.map { |key| key.capitalize }, selected: 1 %>
    </div>
    <div class="form-actions">
      <%= f.submit 'Update Event details', class: 'btn btn-primary' %>
    </div>
  <% end %>
  <%= link_to 'Back', event_edition_path(@edition.event, @edition), class: 'btn btn-primary' %>
</div>
