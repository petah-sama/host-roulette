<div class="card-form-container d-flex justify-content-center">

  <div class="card-show col-lg-6 m-4 p-0">

    <div class="card-show-info p-4">

      <h3>Log in</h3>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions d-md-flex justify-content-between">
          <%= f.button :submit, "Log in", class: 'btn btn-danger' %>
          <div class="d-flex justify-content-between aux-links">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>

    </div>

  </div>

</div>
