<div class="content-container d-flex mt-4">
  <div class="card-container col-8 ml-3">
    <div class="title m-4">
      <h2>Your Past Editions</h2>
    </div>

      <% @past_editions.each do |edition| %>
      <div class="dashboard-card-container">
      <div class="dashboard-card col-12">
        <p><%= edition.name %></p>
        <p>Status:<%= edition.status %></p>
        <p>Friends in this edition:<% edition.guests.each do |guest| %>
            <% if guest.member.user.first_name %>
              <%= guest.member.user.first_name %>
            <% else %>
              <%= guest.member.user.email %>
            <% end %>
          <% end %>
        </p>
      <% end %>
      </div>
    </div>
  </div>
</div>
