  <% @friends.each do |friend| %>
    <div class="friend-card">

    <%= link_to user_path(friend) do %>
      <% if friend.photo.attached? %>
        <%= cl_image_tag friend.photo.key %>
      <% else %>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier" %>
      <% end %>
    <% end %>

      <div class="friend-card-infos">
          <% if friend.first_name && friend.last_name %>
            <%= link_to user_path(friend) do %>
              <h2><%= friend.first_name %> <%= friend.last_name %></h2>
            <% end %>
            <p>Your buddy email is <strong><%= friend.email %></strong></p>
          <% else %>
            <%= link_to user_path(friend) do %>
              <h2><%= friend.email %></h2>
            <% end %>
            <p>Tell your buddy to add his first and last name ğŸ˜‰</p>
          <% end %>
      </div>

    </div>
  <% end %>
</div>



