<h1>Dashboard</h1>
<div class="content-container d-flex">
  <div class="card-container col-8">
    <div class="custom-control custom-switch">
      <input type="checkbox" name ='checkbox' class="custom-control-input toggleButton" id="customSwitch1" unchecked>
      <label class="custom-control-label" id ='label-active' for="customSwitch1">All</label>
    </div>

    <div class="active-cards " id= 'active-cards'>
      <%= render 'pages/filters/active-editions' %>
    </div>

    <div class="pending-cards" id= 'pending-cards'>
      <%= render 'pages/filters/pending-editions' %>
    </div>
  </div>
  <div class = 'col-4'>
    <div class="stats-container m-4 p-3">
      <h1> Hosting </h1>
      <h4>  <%= @editions.size %> of 5 </h4>
    </div>

    <div class="stats-container m-4 p-3">
      <h1> Pending </h1>
      <h4>  <%= @editions.size %> of 5 </h4>
    </div>
  </div>

</div>


<script>


  var filterHost = document.getElementById('filter-by-host');
  //Ainda vai ser preciso criar o filtro de host//

  var list = document.querySelectorAll("active-card");
  var filterActive = document.getElementById('filter-by-state');

  var checkbox = document.querySelector('input[name=checkbox]')
  var x = document.getElementById("active-cards");
  var labelActive = document.getElementById("label-active")
  checkbox.addEventListener('change', function() {
    if (checkbox.checked) {
      labelActive.innerHTML = "Pending first";
      x.style.display = "block";
    } else {
      labelActive.innerHTML = "All";
      x.style.display = "none";
    }
  });







</script>
