<div class="col-8">
    <%= simple_form_for [@edition, @item], url: event_edition_items_path(@event, @edition), method: :post do |f| %>
    <div class="form-inputs">
        <%= f.input :name, placeholder: 'Add a new item' %>
    </div>
     <div class="form-actions">
         <%= f.submit 'Add item', class:'btn btn-danger' %>
         <%= link_to 'Back', edit_event_edition_path(@event, @edition), class:'btn btn-primary ml-4' %>
    </div>
    <% end %>
  </div>
</div>

